<mvc:View
    controllerName="sap.ui.demo/walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Shell>
    <App>
        <pages>
            <Page title="{i18n>homePageTitle}">
                <content>
                    <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                        <content>
                            <Button class="sapUiSmallMarginEnd" text="{i18n>showHeyButtonText}" press=".onShowHey"/>
                            <Input value='{/recipient/name}' width="40%" valueLiveUpdate="true"/>
                            <Text class="sapUiSmallMargin" text="Hello {/recipient/name}"></Text>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
    </Shell>
</mvc:View>