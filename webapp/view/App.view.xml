<mvc:View
    controllerName="sap.ui.demo/walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <App>
        <pages>
            <Page title="{i18n>homePageTitle}">
                <content>
                    <Panel headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button text="{i18n>showHeyButtonText}" press=".onShowHey"/>
                            <Input value='{/recipient/name}' description="Hello {/recipient/name}" width="40%" valueLiveUpdate="true"/>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>